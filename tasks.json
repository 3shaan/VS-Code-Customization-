{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "echo",
      "type": "shell",
      "command": "echo Hello"
    },
    {
      "label": "maximize_terminal",
      "command": "${command:workbench.action.toggleMaximizedPanel}"
    },
    {
      "label": "lazygit",
      "type": "shell",
      "command": "lazygit",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "clear": false,
        "close": true
      },
      "dependsOn": "maximize_terminal"
    },
    {
      "label": "close_lazygit",
      "command": "${command:workbench.action.toggleMaximizedPanel}",
      "dependsOn": "lazygit"
    }
  ]
}
